{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
        "type-enum": [2, "always", [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "improvement",
        "revert",
        "style",
        "test"]],
        "scope-empty": [2, "never"],
        "body-max-line-length": [2, "always", "Infinity"],
        "footer-max-line-length": [2, "always", "Infinity"]
    }
}
